{
    "scripts": {
        "postcss:import": "npx postcss ./packages/site_package/Resources/Public/Css/import.css -o ./packages/site_package/Resources/Public/Css/post-output.css --watch",
        "postcss:news": "npx postcss ./packages/site_package/Resources/Public/Css/news.css -o ./packages/site_package/Resources/Public/Css/news-output.css --watch",
        "postcss": "npm-run-all --parallel postcss:import postcss:news"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.38",
        "postcss-cli": "^11.0.0",
        "postcss-import": "^16.1.0",
        "postcss-preset-env": "^10.1.0"
    }
}
